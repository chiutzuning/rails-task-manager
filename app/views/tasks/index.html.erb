<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
         <%= link_to "Delete #{@task}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %><i class="fas fa-trash"></i></li>
  <% end %>
</ul>
